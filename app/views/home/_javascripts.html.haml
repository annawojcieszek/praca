%section.javascripts

  .result-bg.js
    .circle
  .tools
    .tool.zoom-in
    .tool.zoom-out
    .tool.turn-right
    .tool.turn-left
    .tool.orange
    .tool.turquoise
    .tool.brown
  .box-wrapper
    .item-wrapper
      .clips.left.green
      .clips.right.green
      %section.green-box
        %header 
          %h1 Coffeescript
        .content.green
          %nav
            %ul
              %li.first-link.active square.js.coffee
          .code-area
            %span.first.active
              %pre
                = preserve do
                  :escaped
                    $ ->
                      $orange = $(".tool.orange")
                      $turquoise = $(".tool.turquoise")
                      $brown = $(".tool.brown")
                      $square = $(".result-bg.js")
                      $zoomIn = $(".tool.zoom-in")
                      $zoomOut = $(".tool.zoom-out")
                      $turnRight = $(".tool.turn-right")
                      $turnLeft = $(".tool.turn-left")
 
                      $zoomInScale = 1.2
                      $zoomOutScale = 0.8
                      $degree = 0

                      $orange.click ->
                        $square.css("background-color", "#E7AE00")
  
                      $turquoise.click ->
                        $square.css("background-color", "#8BBEA5")
    
                      $brown.click ->
                        $square.css("background-color", "#6F5A42")
    
                      $zoomIn.click ->
                        $width = $square.width()
                        if $width < 249
                          $newWidth = ($width * $zoomInScale)
                          $newHeight = $newWidth
                          $square.animate {width: $newWidth, height: $newHeight}, 300

                      $zoomOut.click ->
                        $width = $square.width()
                        if $width > 40
                          $newWidth = ($width * $zoomOutScale)
                          $newHeight = $newWidth
                          $square.animate {width: $newWidth, height: $newHeight}, 300
      
                      $turnRight.click ->
                        $degree += 20
                        $square.css("transform", "rotate(" + $degree + "deg)")
    
                      $turnLeft.click ->
                        $degree -= 20
                        $square.css("transform", "rotate(" + $degree + "deg)")
    
          .sign-amount
            Ilość znaków: 900
        %footer.green
          .green-arrow
    .item-wrapper.blue
      .clips.left.blue
      .clips.right.blue
      %section.blue-box 
        %header
          %h1 Javascript
        .content.blue
          %nav
            %ul
              %li.active square.js
          .code-area
            %span.active
              %pre
                = preserve do
                  :escaped
                    $(function() {
                      var $brown, $degree, $orange, $square, $turnLeft, $turnRight, $turquoise, $zoomIn, $zoomInScale, $zoomOut, $zoomOutScale;
                      $orange = $(".tool.orange");
                      $turquoise = $(".tool.turquoise");
                      $brown = $(".tool.brown");
                      $square = $(".result-bg.js");
                      $zoomIn = $(".tool.zoom-in");
                      $zoomOut = $(".tool.zoom-out");
                      $turnRight = $(".tool.turn-right");
                      $turnLeft = $(".tool.turn-left");
                      $zoomInScale = 1.2;
                      $zoomOutScale = 0.8;
                      $degree = 0;
                      $orange.click(function() {
                        return $square.css("background-color", "#E7AE00");
                      });
                      $turquoise.click(function() {
                        return $square.css("background-color", "#8BBEA5");
                      });
                      $brown.click(function() {
                        return $square.css("background-color", "#6F5A42");
                      });
                      $zoomIn.click(function() {
                        var $newHeight, $newWidth, $width;
                        $width = $square.width();
                        if ($width < 249) {
                          $newWidth = $width * $zoomInScale;
                          $newHeight = $newWidth;
                          return $square.animate({
                            width: $newWidth,
                            height: $newHeight
                          }, 300);
                        }
                      });
                      $zoomOut.click(function() {
                        var $newHeight, $newWidth, $width;
                        $width = $square.width();
                        if ($width > 40) {
                          $newWidth = $width * $zoomOutScale;
                          $newHeight = $newWidth;
                          return $square.animate({
                            width: $newWidth,
                            height: $newHeight
                          }, 300);
                        }
                      });
                      $turnRight.click(function() {
                        $degree += 20;
                        return $square.css("transform", "rotate(" + $degree + "deg)");
                      });
                      return $turnLeft.click(function() {
                        $degree -= 20;
                        return $square.css("transform", "rotate(" + $degree + "deg)");
                      });
                    });
                    
          .sign-amount
            Ilość znaków: 1258
        %footer.blue
          .blue-arrow
.clearfix